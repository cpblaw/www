---
layout: blank
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
reference: https://www.belter.io/eleventy-sitemap/
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for page in collections.all %}
        {% if page.data.layout %}
            <url>
                <loc>{{ site.url }}{{ page.url | url }}</loc>
                <lastmod>{{ page.date | date: '%Y-%m-%d' }}</lastmod>
                <changefreq>{{ page.data.changeFreq | default: 'monthly' }}</changefreq>
                <priority>{{ page.data.priority | default: '0.5' }}</priority>
            </url>
        {% endif %}
    {% endfor %}

    {% for page in publications %}
        <url>
            <loc>{{ site.url }}/publications/{{ page.year }}/{{ page.title | slug }}/</loc>
            <lastmod>{{ page.publisheddate }}</lastmod>
            <changefreq>yearly</changefreq>
            <priority>0.8</priority>
        </url>
    {% endfor %}
</urlset>
